{
  "name": "Docker in Docker",
  "dockerComposeFile": ["docker-compose.yml"],
  "service": "devcontainer",
  "workspaceFolder": "/var/www/geocloud2",
  "mounts": [
    "source=${localWorkspaceFolder},target=/var/www/geocloud2,type=bind"
  ],
  "postCreateCommand": "sudo chown 1000 /var/www/geocloud2 && npm install -g grunt-cli && grunt && bash run.sh",
  "customizations": {
    "vscode": {
      "settings": {
        "php.validate.executablePath": "/usr/bin/php", // Adjust based on your PHP path
        "php.debug.port": 9003
      },
      "extensions": [
        "xdebug.php-pack"
      ]
    }
  }
}
